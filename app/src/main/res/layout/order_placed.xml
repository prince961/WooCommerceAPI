<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/thanks"
        android:textAlignment="center"
        android:textSize="24sp" />


    <TextView
        android:text="Your Order has been successfully placed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/thanks"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Order Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/OrderDAteTime" />

    <TextView
        android:text="id : 201"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/orderId"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Date/Time : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OrderDAteTime"
        android:layout_below="@+id/orderId"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Address:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OrderAddress"
        android:layout_below="@+id/OrderDAteTime"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OrderAddress"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:id="@+id/textView16" />

    <TextView
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView19" />

    <TextView
        android:text="Qty."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_alignBaseline="@+id/textView16"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignParentEnd="true"
        android:paddingRight="50dp"
        android:layout_marginEnd="25dp"
        android:gravity="start"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true"
        android:id="@+id/listViewOrderItems"
        android:minHeight="5dp">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        android:layout_below="@id/listViewOrderItems"
        android:layout_toStartOf="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:id="@+id/totalAmountOP"
        android:layout_below="@id/listViewOrderItems"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>